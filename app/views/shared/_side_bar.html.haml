.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username
        = current_user.name   #ユーザー画面実装で追加#
      %ul.side-header__box__menu
        %li.side-header__box__new-group
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon') #ユーザー画面実装で追加#
        %li.side-header__box__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon') #ユーザー画面実装で追加#
  .groups
    - current_user.groups.each do |group|
      = link_to "#", class:"group" do
        .group__group-name
          = group.name
        .group__latest-message
